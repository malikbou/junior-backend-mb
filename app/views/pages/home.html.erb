<div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-6">
            <h2 class="text-center mt-5 mb-5">Create your account</h2>
          <form action="#" class="row">
            <div class="col-6 mb-3">
              <label for="first-name" class="form-label">Your first name</label>
              <input id="first-name" type="text" class="form-control" placeholder="Bob">
            </div>
            <div class="col-6 mb-3">
              <label for="last-name" class="form-label">Your last name</label>
              <input id="last-name" type="text" class="form-control" placeholder="Sponge">
            </div>
            <div class="col-12 mb-3">
              <label for="address" class="form-label">Your email</label>
              <input id="address" type="text" class="form-control" placeholder="bob@sponge.com">
            </div>
            <div class="col-12 mb-3">
              <label for="address" class="form-label">Your password</label>
              <input id="address" type="text" class="form-control" placeholder="********">
            </div>
            <div class="col-12 mb-3">
              <label for="select" class="form-label">How do you know about us?</label>
              <select class="form-select" aria-label="Default select example">
                <option selected>Select an option</option>
                <option value="1">Facebook</option>
                <option value="2">Google Search</option>
                <option value="3">A friend</option>
              </select>
            </div>
            <div class="col-12">
              <input type="submit" value="Sign In" class="btn btn-primary btn-lg w-100">
            </div>

          </form>
        </div>
      </div>
    </div>


